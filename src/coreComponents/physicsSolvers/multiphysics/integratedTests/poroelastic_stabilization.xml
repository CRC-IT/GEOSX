<?xml version="1.0" ?>

<Problem>
  <Solvers
    gravityVector="0.0, 0.0, 0.0">
    
    <!-- SPHINX_POROELASTIC_SOLVER -->
    <Poroelastic
      name="poroSolve"
      solidSolverName="lagsolve"
      fluidSolverName="SinglePhaseFlow"
      couplingTypeOption="FIM"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Region1 }">
      <NonlinearSolverParameters
        newtonMaxIter="40"/>
      <LinearSolverParameters
        solverType="gmres"
        krylovTol="1.0e-6"
	krylovMaxIter="50"
        logLevel="1"/>
    </Poroelastic>

    <SolidMechanicsLagrangianSSLE
      name="lagsolve"
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Region1 }"
      solidMaterialNames="{ shale }">
    </SolidMechanicsLagrangianSSLE>

    <SinglePhaseFVM
      name="SinglePhaseFlow"
      logLevel="1"
      discretization="singlePhaseTPFA"
      targetRegions="{ Region1 }"
      fluidNames="{ water }"
      solidNames="{ shale }">
    </SinglePhaseFVM>
    
  </Solvers>

  <!-- SPHINX_POROELASTIC_SOLVER_END -->
  <!-- SPHINX_POROELASTIC_MESH -->
  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 1 }"
      yCoords="{ 0, 0.0625 }"
      zCoords="{ 0, 1 }"
      nx="{ 16 }"
      ny="{ 1 }"
      nz="{ 16 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <!-- SPHINX_POROELASTIC_MESH_END -->
  <Geometry>
    <Box
      name="xnegP"
      xMin="-0.01, -0.01, -0.01"
      xMax=" 0.08, 0.07, 1.01"/>

    <Box
      name="xposP"
      xMin=" 0.93, -0.01, -0.01"
      xMax=" 1.01, 0.07, 1.01"/>

    <Box
      name="znegP"
      xMin="-0.01, -0.01, -0.01"
      xMax=" 1.01, 0.07 , 0.07"/>

    <Box
      name="zposP"
      xMin="-0.01, -0.01, 0.93"
      xMax=" 1.01, 0.07, 1.01"/>
			
    <Box
      name="source"
      xMin="0.24, -0.01, 0.24"
      xMax=" 0.3135, 0.07, 0.3135"/>
  </Geometry>

  <Events
    maxTime="0.01">
    <!--This event is applied every 1.0s.  The targetExactTimestep
    flag allows this event to request a dt modification to match an
    integer multiple of the timeFrequency. -->
    <PeriodicEvent
      name="outputs"
      timeFrequency="0.01"
      targetExactTimestep="1"
      target="/Outputs/siloOutput"/>

    <!-- This event is applied every cycle, and overrides the
    solver time-step request -->
    <PeriodicEvent
      name="solverApplication"
      target="/Solvers/poroSolve"/>

  </Events>

  <!-- SPHINX_POROELASTIC_NUMERICAL_METHODS -->
  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>

    <FiniteVolume>
      <TwoPointFluxApproximation
        name="singlePhaseTPFA"
        fieldName="pressure"
	mechanicalStabCoefficient="0.0563"
        coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

  <!-- SPHINX_POROELASTIC_NUMERICAL_METHODS_END -->
  <ElementRegions>
    <CellElementRegion
      name="Region1"
      cellBlocks="{ cb1 }"
      materialList="{ shale, water }"/>
  </ElementRegions>

  <!-- SPHINX_POROELASTIC_CONSTITUTIVE -->
  <Constitutive>
    <PoroLinearElasticIsotropic
      name="shale"
      defaultDensity="2700"
      defaultPoissonRatio="0.25"
      defaultYoungsModulus="2.5"
      BiotCoefficient="1.0"/>

    <CompressibleSinglePhaseFluid
      name="water"
      defaultDensity="1000"
      defaultViscosity="0.001"
      referencePressure="0"
      referenceDensity="1000"
      compressibility="0"
      referenceViscosity="0.001"
      viscosibility="0.0"/>
  </Constitutive>

  <!-- SPHINX_POROELASTIC_CONSTITUTIVE_END -->
  <FieldSpecifications>
    <FieldSpecification
      name="permx"
      component="0"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="permeability"
      scale="1e-11"/>

    <FieldSpecification
      name="permy"
      component="1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="permeability"
      scale="1e-11"/>

    <FieldSpecification
      name="permz"
      component="2"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="permeability"
      scale="1e-11"/>

    <FieldSpecification
      name="referencePorosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="referencePorosity"
      scale="0.3"/>

    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="pressure"
      scale="0"/>

    <FieldSpecification
      name="xnegconstraint"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="0"
      scale="0.0"
      setNames="{ xneg,xpos }"/>

    <FieldSpecification
      name="yconstraint"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="1"
      scale="0.0"
      setNames="{ yneg, ypos }"/>

    <FieldSpecification
      name="zconstraint"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="2"
      scale="0.0"
      setNames="{ zneg, zpos }"/>

    <!-- <FieldSpecification
      name="boundaryPressure"
      objectPath="faceManager"
      fieldName="pressure"
      scale="0"
      setNames="{ xneg, xpos, zneg, zpos }"/> -->
			
    <FieldSpecification
      name="boundaryPressure"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="pressure"
      scale="0"
      setNames="{ xnegP, xposP, znegP, zposP }"/>
			
    <FieldSpecification
      name="pointSource"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="pressure"
      scale="0.01"
      setNames="{ source }"/>
				
  </FieldSpecifications>

  <!-- <Functions>
    <TableFunction
      name="timeFunction"
      inputVarNames="{ time }"
      coordinates="{ 1.0, 2.0, 6e4 }"
      values="{ 1.0, 2.0, 2.0 }"/>
  </Functions> -->

  <Outputs>
    <Silo
      name="siloOutput"/>

    <!-- Silo name="siloOutput" parallelThreads="32" plotFileRoot="plot" childDirectory="sub" writeFEMEdges="0" writeFEMFaces="1" writePlot="1" writeRestart="0"/ >-->
  </Outputs>
</Problem>
