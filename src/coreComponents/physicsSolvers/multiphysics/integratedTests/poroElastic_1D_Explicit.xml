<?xml version="1.0" ?>
<!--# # -->

<Problem>

  <Solvers
    gravityVector="0.0, -0.0, 0.0"
    >
  
    <Hydrofracture 
      name="hydrofracture" 
      solidSolverName="lagsolve"
      fluidSolverName="SinglePhaseFlow"
      couplingTypeOption="ExplicitlyCoupled"
      targetRegions="{Region2}"
      contactRelationName=""
      >
    </Hydrofracture>
  
    <SolidMechanics_LagrangianFEM
      name="lagsolve" 
      timeIntegrationOption="ExplicitDynamic"
      cflFactor="0.25"
      discretization="FE1"
      targetRegions="{Region2}"
      solidMaterialName="rock"
      massDamping="100"
      >
    </SolidMechanics_LagrangianFEM>
  
    <SinglePhaseFVM 
         name="SinglePhaseFlow"
         timeIntegrationOption="ExplicitTransient"
         cflFactor="0.25"
         discretization="singlePhaseTPFA"
         targetRegions="{Region2}"
         fluidName="water"
         solidName="rock"
      >
    </SinglePhaseFVM>
    
  </Solvers>
  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="{C3D8}"
                  xCoords="{0, 10}"
                  yCoords="{0, 1}"
                  zCoords="{0, 1}"
                  nx="{10}"
                  ny="{1}"
                  nz="{1}"
                  cellBlockNames="{cb1}"/>
  </Mesh>

  <Geometry>
    <Box name="Inlet"
         xMin="8.89, -0.01, -0.01"
         xMax="10.01, 1.01, 1.01"/>
  </Geometry>


  <Events maxTime="4"
          maxCycle="100000000">
  
    <PeriodicEvent 
      name="solverApplications1"
      target="/Solvers/hydrofracture" />

    <PeriodicEvent name="outputs"
                   cycleFrequency="10"
                   target="/Outputs/siloOutput" />
  </Events>

  <NumericalMethods>
    <BasisFunctions> 
        <LagrangeBasis3 name="linearBasis"  degree = "1"  />
    </BasisFunctions>
    
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"   degree="2"  />    
    </QuadratureRules>
    
    <FiniteElements>
        <FiniteElementSpace name="FE1" parentSpace="C3D8" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>

    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion name="Region2"
                   cellBlocks="{cb1}"
                   materialList="{water, rock}"/>
  </ElementRegions>

  <Constitutive>

    <CompressibleSinglePhaseFluid name="water"
                                  defaultDensity="1000"
                                  defaultViscosity="0.35"
                                  referencePressure="0"
                                  referenceDensity="1000"
                                  compressibility="2.76e-6"
                                  referenceViscosity="0.35"
                                  viscosibility="0.0"/>

    <PoroLinearElasticIsotropic name="rock"
                                defaultDensity="2700"
                                defaultBulkModulus="4e6"
                                defaultShearModulus="0.4e6"
                                BiotCoefficient="1"
                                />
  </Constitutive>

  <FieldSpecifications>

    <FieldSpecification 
            name="permx"
            component="0"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="permeability"
            scale="4.0e-11" />

    <FieldSpecification
            name="permy"
            component="1"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="permeability"
            scale="4.0e-11" />

    <FieldSpecification
            name="permz"
            component="2"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="permeability"
            scale="4.0e-11" />

    <FieldSpecification
            name="referencePorosity"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="referencePorosity"
            scale="0.3" />

    <FieldSpecification name="xconstraint"
               objectPath="nodeManager"
               fieldName="Velocity"
               component="0"
               scale="0.0"
               setNames="{xneg}"/>

    <FieldSpecification name="yconstraint"
               objectPath="nodeManager"
               fieldName="Velocity"
               component="1"
               scale="0.0"
               setNames="{yneg, ypos}"/>

    <FieldSpecification name="zconstraint"
               objectPath="nodeManager"
               fieldName="Velocity"
               component="2"
               scale="0.0"
               setNames="{zneg, zpos}"/>          

    <FieldSpecification name="initialMass"
               initialCondition="1"
               setNames="{all}"
               objectPath="ElementRegions/Region2/cb1"
               fieldName="fluidMass"
               scale="305"/>

	<FieldSpecification name="xposconstraint" 
               objectPath="faceManager" 
               fieldName="Traction" 
               component="0" 
               scale="-10000" 
               setNames="{xpos}"
               functionName="timeFunction"/>

  </FieldSpecifications>

  <Functions>   
    <TableFunction     name="timeFunction"         inputVarNames="{time}" coordinates="{0.0, 1.0, 6e4}" values="{0.0, 1.0, 1.0}" />
  </Functions>

  <Outputs>
      <Silo name="siloOutput"
            plotFileRoot="poroElastic_1D_Explicit"/>
  </Outputs>

</Problem>

