<?xml version="1.0" ?>
<!--# # -->

<Problem>

  <Solvers
    gravityVector="0.0,0.0,-9.81">
  
    <SinglePhaseFlow name="SinglePhaseFlow"
                     timeIntegrationOption="ExplicitTransient"
                     cflFactor="0.4"
                     verboseLevel="0"
                     gravityFlag="1"
                     discretization="singlePhaseTPFA"
                     targetRegions="{Region2, Fracture}"
                     fluidName="water"
                     solidName="rock">
      <SystemSolverParameters name="SystemSolverParameters"
                              krylovTol="1.0e-12"
                              newtonTol="1.0e-8"
                              maxIterNewton="8"/>
    </SinglePhaseFlow>
    
    <SurfaceGenerator name="SurfaceGen"
                      verboseLevel="0"
                      fractureRegion="Fracture"
                      targetRegions="{Fracture}"
                      solidMaterialName="granite"
                      rockToughness="1e6"
                      >
    </SurfaceGenerator>
    
  </Solvers>
  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="{C3D8}" 
                  xCoords="{-1, 1}"
                  yCoords="{0, 10}"
                  zCoords="{0, 1}"
                  nx="{2}"
                  ny="{10}"
                  nz="{1}"
                  cellBlockNames="{cb1}"/>
  </Mesh>

  <Geometry>
    <Box name="fracture1" xMin="-0.01, -0.01, -0.01" xMax=" 0.01, 10.01, 1.01"/>
    <Box name="fracture2" xMin="-2.01,  4.9, -0.01" xMax=" 2.01,  5.1, 1.01"/>
    <Box name="sink"      xMin="-0.01, -0.01, -0.01" xMax=" 0.01,  1.01, 1.01"/>
    <Box name="source"    xMin="-0.01, 7.99, -0.01" xMax=" 0.01,  10.01, 1.01"/>
  </Geometry>


  <Events maxTime="3.0">

    <SoloEvent name="preFracture"
               target="/Solvers/SurfaceGen"/>

    <PeriodicEvent name="outputs"
                   timeFrequency="1"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput"/>

    <PeriodicEvent name="solverApplications"
                   forceDt="1e-2"
                   target="/Solvers/SinglePhaseFlow"/>

  </Events>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion name="Region2"
                   cellBlocks="{cb1}"
                   materialList="{water, rock}"/>
                   
    <FaceElementRegion name="Fracture"
                       materialList="{water, rock}"/>
                   
  </ElementRegions>

  <Constitutive>
    <CompressibleSinglePhaseFluid name="water"
                                  defaultDensity="1000"
                                  defaultViscosity="0.001"
                                  referencePressure="0.0"
                                  referenceDensity="1000"
                                  compressibility="5e-10"
                                  referenceViscosity="0.001"
                                  viscosibility="0.0"/>

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0.0"
                                 compressibility="1e-9"/>
  </Constitutive>

  <FieldSpecifications>
        <FieldSpecification
            name="permx"
            component="0"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="permeability"
            scale="5.0e-19" />

        <FieldSpecification
            name="permy"
            component="1"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="permeability"
            scale="5.0e-19" />

        <FieldSpecification
            name="permz"
            component="2"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="permeability"
            scale="5.0e-19" />

        <FieldSpecification
            name="referencePorosity"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="referencePorosity"
            scale="0.01" />

        <FieldSpecification
            name="initialPressure"
            initialCondition="1"
            setNames="{all}"
            objectPath="ElementRegions/Region2/cb1"
            fieldName="pressure"
            scale="0.0" />

        <FieldSpecification
            name="frac"
            initialCondition="1"
            setNames="{fracture1, fracture2}"
            objectPath="faceManager"
            fieldName="ruptureState"
            scale="1"/>

        <FieldSpecification
            name="aper"
            setNames="{fracture1, fracture2}"
            objectPath="ElementRegions/Fracture"
            fieldName="elementAperture"
            scale="0.5e-5"/>

        <FieldSpecification
            name="source"
            objectPath="ElementRegions/Fracture"
            fieldName="pressure"
            scale="1.0e6"
            setNames="{sink}"/>

        <SourceFlux 
            name="sourceTerm"
            objectPath="ElementRegions/Fracture"
            scale="-1e-5"
            setNames="{source}"/>
  </FieldSpecifications>

  <Functions>
  </Functions>

  <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition>

  <Outputs>
    <Silo name="siloOutput"
            plotFileRoot="ExplicitfractureFlow"
            plotLevel="2" />
  </Outputs>


</Problem>
