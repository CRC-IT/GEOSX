<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  
  <Solvers>
    <SolidMechanics_LagrangianFEM name="lagsolve" 
                                  cflFactor="0.25"
                                  discretization="FE1"
                                  targetRegions="{Region2}"
                                  solidMaterialName="al"/>
  </Solvers>

  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="{C3D8}" 
                  xCoords="{0.00075, 1.00075}"
                  yCoords="{-0.5, 0.5}"
                  zCoords="{-0.5, 0.5}"
                  nx="{4}"
                  ny="{4}"
                  nz="{4}"
                  cellBlockNames="{cb1}"/>
  </Mesh>


  <Events maxTime="15.0">
    <!-- This event is applied every cycle, and overrides the
    solver time-step request -->
    <PeriodicEvent name="solverApplications"
                   forceDt="5.0e-4"
                   target="/Solvers/lagsolve" />

    <PeriodicEvent name="outputs"
                   timeFrequency="0.05"
                   targetExactTimestep="0"
                   target="/Outputs/siloOutput" />
  </Events>


  <NumericalMethods>

    <BasisFunctions>
        <LagrangeBasis3 name="linearBasis"  degree = "1"  />
    </BasisFunctions>
    
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"   degree="2"  />    
    </QuadratureRules>
    
    <FiniteElements>
        <FiniteElementSpace name="FE1" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <ElementRegion name="Region2" cellBlocks="{cb1}" materialList="{al}"/>
  </ElementRegions>

  <Constitutive>
      <LinearElasticIsotropic name="al"
                              defaultDensity="2.703"
                              defaultBulkModulus="0.742178928"
                              defaultShearModulus="0.276"/>
  </Constitutive>


  <FieldSpecifications>
    <FieldSpecification name="initVel"  
                        initialCondition="1"  
                        setNames="{all}"
                        objectPath="nodeManager"
                        fieldName="Velocity"
                        component="0"
                        scale="-0.0002"/>
  </FieldSpecifications>

  <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition>
  
  <Outputs>
    <Silo name="siloOutput"
          parallelThreads="32"
          plotFileRoot="plot"
          writeFEMFaces="1" />
  </Outputs>

</Problem>

