
<Problem>

  <Solvers
    gravityVector="0.0, 0.0, -9.81">
  
    <TwoPhaseHybridFVM name="twophaseflow"
                                 logLevel="1"
                                 discretization="fluidTPFA"
                                 targetRegions="{Region1}"
                                 fluidName="fluid1"
                                 solidName="rock"
                                 relPermName="relperm">
      <NonlinearSolverParameters lineSearchAction="0"
                                 newtonTol="1.0e-10"
                                 newtonMaxIter="15"/>
      <SystemSolverParameters useDirectSolver="1"/>
    </TwoPhaseHybridFVM>
  </Solvers>
  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="{C3D8}" 
                  xCoords="{0, 20}"
                  yCoords="{0, 1}"
                  zCoords="{0, 100}"
                  nx="{2}"
                  ny="{1}"
                  nz="{50}"
                  cellBlockNames="{block1}"/>
  </Mesh>

  <Events maxTime="1e10">

    <PeriodicEvent name="outputs"
                   timeFrequency="5e7"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput"/>

    <PeriodicEvent name="solverApplications"
                   forceDt="1e7"
                   target="/Solvers/twophaseflow"/>

    <PeriodicEvent name="restarts"
                   timeFrequency="5e7"
                   targetExactTimestep="0"
                   target="/Outputs/restartOutput"/>
  </Events>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="fluidTPFA"
                                 fieldName="pressure"
                                 coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion name="Region1" cellBlocks="{block1}" materialList="{fluid1, rock, relperm}" />
  </ElementRegions>

  <Constitutive>
    <!-- Currently these fluid properties are not used in the simulation --> 
    <ImmiscibleTwoPhaseFluid name="fluid1"
			     phaseNames="{oil, gas}"
                             referencePressure="1e6"
			     referencePhaseDensity="{800,10}"
                             referencePhaseViscosity="{0.001,0.0001}"
			     phaseCompressibility="{1e-9,1e-7}"
			     phaseViscosibility="{1e-12,1e-11}"/>

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0.0"
                                 compressibility="1e-9"/>

    <BrooksCoreyRelativePermeability name="relperm"
                                     phaseNames="{oil, gas}"
                                     phaseMinVolumeFraction="{0.0, 0.0}"
                                     phaseRelPermExponent="{2.0, 3.0}"
                                     phaseRelPermMaxValue="{1.0, 1.0}"/>
  </Constitutive>

  <FieldSpecifications>

    <FieldSpecification name="permx"
               component="0"
               initialCondition="1"  
               setNames="{all}"
               objectPath="ElementRegions/Region1/block1"
               fieldName="permeability"
               scale="1.0e-14"/>

    <FieldSpecification name="permy"
               component="1"
               initialCondition="1"
               setNames="{all}"
               objectPath="ElementRegions/Region1/block1"
               fieldName="permeability"
               scale="1.0e-14"/>

    <FieldSpecification name="permz"
               component="2"
               initialCondition="1"
               setNames="{all}"
               objectPath="ElementRegions/Region1/block1"
               fieldName="permeability"
               scale="1.0e-14"/>

    <FieldSpecification name="referencePorosity"
               initialCondition="1"
               setNames="{all}"
               objectPath="ElementRegions/Region1/block1"
               fieldName="referencePorosity"
               scale="0.2"/>

    <!-- Initial pressure -->

    <FieldSpecification name="initialPressure"
               initialCondition="1"
               setNames="{all}"
               objectPath="ElementRegions/Region1/block1"
               fieldName="pressure"
               scale="5e6"/>

    <FieldSpecification name="initialFacePressure"
               initialCondition="1"
               setNames="{all}"
               objectPath="faceManager"
               fieldName="facePressure"
               scale="0"/>

    
    <!-- Initial saturation -->

    <FieldSpecification name="initialSaturation"
               initialCondition="1"
               setNames="{all}"
               objectPath="ElementRegions/Region1/block1"
               fieldName="wettingPhaseSaturation"
               scale="0.5"/>

  </FieldSpecifications>

  <Outputs>
    <Silo name="siloOutput"/>
    <Restart name="restartOutput"/>
  </Outputs>

</Problem>
